{
  "expo": {
    "name": "AgroSketch Pro",
    "slug": "agrosketch-pro",
    "scheme": "agrosketchpro",
    "version": "1.0.0",
    "orientation": "portrait",
    
    "icon": "./assets/images/icon.png", 
    "userInterfaceStyle": "light",
    
    "splash": {
      "image": "./assets/images/splash.png", 
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    
    "ios": {
      "supportsTablet": true
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png", 
        "backgroundColor": "#ffffff"
      },
      "package": "br.com.mateuss.agrosketchpro",
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyC_mBui6EoWE5aEFY2KILSHf1EhX9eWEKA"
        }
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    
    "web": {
      "favicon": "./assets/images/icon.png"
    },
    
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir que o AgroSketch use sua localização para mapear o terreno."
        }
      ]
    ]
  }
}